{{- $.Scratch.Set "items" slice -}}
{{- range .Pages -}}
  {{- $.Scratch.Add "items" (dict
    "title" .Title
    "url" .Permalink
    "description" (.Params.short_description | default .Summary | plainify | truncate 200)
    "headquarters" .Params.headquarters
    "company_type" .Params.company_type
    "products" .Params.products
    "primary_materials" .Params.primary_materials
  ) -}}
{{- end -}}
{{- $.Scratch.Get "items" | jsonify -}}
